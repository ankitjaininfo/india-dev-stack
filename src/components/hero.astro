---
import { Icon } from "astro-icon/components";
import { Button } from "./ui/button";
import img1 from "@assets/Indian-flag.png";
import { Picture } from "astro:assets";
---

<main
  class="flex flex-wrap-reverse flex-col justify-start min-h-[90svh] items-center mx-auto place-items-center pt-16 md:pt-24">
  <div
    class="absolute top-0 z-[-2] h-svh w-screen dark:brightness-100 dark:opacity-100 brightness-200 opacity-65 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(100,50,20,0.4),rgba(255,255,255,0))]">
  </div>
  <div
    class="w-80 h-80 bottom-0 -right-20 rounded-full bg-green-500/20 dark:bg-emerald-700/15 blur-3xl absolute">
  </div>
  <div
    class="w-72 h-72 bottom-0 -left-20 rounded-full bg-blue-500/20 dark:bg-blue-700/10 blur-3xl absolute">
  </div>

  <div
    class="rounded-full p-1 px-2 border text-sm flex items-center cursor-pointer hover:scale-105 transition-all active:scale-95 active:rotate-2 duration-300 glow md:text-base">
    <span class="text-white bg-primary px-2 mr-2 rounded-full">New</span> India Dev
    Stack <span><Icon name="bx:right-arrow-alt" class="mx-1" /> </span>
  </div>

  <div class="text-center max-w-6xl">
    <h1
      class="text-4xl bg-gradient-to-br from-foreground via-foreground/80 to-background/50 bg-clip-text text-transparent mt-6 md:text-5xl xl:text-7xl scale-105 font-bold lg:tracking-tight xl:tracking-tighter">
      Unleashing <span
        class="bg-gradient-to-r from-cyan-400 to-lime-500 bg-clip-text text-transparent">
        India</span
      >'s Innovation in Software Development
    </h1>
    <p
      class="md:text-xl text-lg opacity-90 mt-4 text-muted-foreground max-w-2xl mx-auto">
      A curated directory of tools built by Indian founders for every stage of
      your software development lifecycle.
    </p>
  </div>
  <div class="mt-8 flex flex-col sm:flex-row gap-3">
    <a href="/software">
      <Button client:idle size={"lg"}
        >Explore
        <Icon name="bx:search-alt" class="size-4 ml-2" />
      </Button>
    </a>
    <a
      href="https://github.com/ankitjaininfo/india-dev-stack"
      target="_blank"
      rel="noopener noreferrer">
      <Button client:idle variant={"outline"} size={"lg"}>
        Add your DevTool
        <Icon name="fluent:people-team-16-filled" class="size-4 ml-2" />
      </Button>
    </a>
  </div>
  <Picture
    src={img1}
    alt="orange brush"
    height={500}
    width={600}
    loading={"lazy"}
    class="absolute h-40 -bottom-6 -translate-x-1/2 z-[-1]"
  />
</main>
