---
const { variant = "default", class: className, ...rest } = Astro.props;

const badgeVariants = {
  default:
    "border-transparent bg-primary text-primary-foreground hover:bg-primary/80",
  secondary:
    "border-transparent shadow-sm bg-secondary text-secondary-foreground hover:bg-secondary/80",
  destructive:
    "border-transparent bg-destructive text-destructive-foreground hover:bg-destructive/80",
  outline: "text-foreground border",
};

const baseStyles =
  "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 cursor-pointer";
// @ts-ignore
const computedClass = `${baseStyles} ${badgeVariants[variant]} ${className || ""}`;
---

<div class={computedClass} {...rest}>
  <slot />
</div>
