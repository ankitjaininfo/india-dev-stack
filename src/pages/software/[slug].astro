---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Button } from "@components/ui/button";
import { Icon } from "astro-icon/components";
import ProductGallery from "@components/ProductGallery";
import Badge from "@components/ui/badge.astro";
import {
  AwardIcon,
  CheckIcon,
  ImportIcon,
  StarIcon,
  UsersIcon,
} from "lucide-react";

// Generate a new path for every collection entry
export async function getStaticPaths() {
  const softwareEntries = await getCollection("software");
  return softwareEntries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
---

<Layout title={entry.data.Name}>
  <Container>
    <div class="mx-auto prose prose-lg mt-6 max-w-5xl">
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto py-12 px-4 md:px-6">
        <div class="grid gap-4">
          <ProductGallery client:idle images={entry.data.Images} />
        </div>
        <div class="grid gap-6">
          <div>
            <h1 class="text-3xl font-bold">Acme Productivity Suite</h1>
            <div class="flex items-center gap-2 mt-2">
              <Badge variant="secondary">New</Badge>
              <Badge variant="secondary">Productivity</Badge>
            </div>
            <p class="text-muted-foreground mt-4">
              Boost your productivity with our all-in-one suite of tools.
              Streamline your workflow, collaborate seamlessly, and achieve more
              with Acme Productivity Suite.
            </p>
          </div>
          <div class="grid gap-4">
            <div>
              <h2 class="text-xl font-semibold">Key Features</h2>
              <ul class="mt-2 space-y-2 text-muted-foreground">
                <li class="flex items-center gap-2">
                  <CheckIcon className="w-5 h-5 text-primary" />
                  Task Management
                </li>
                <li class="flex items-center gap-2">
                  <CheckIcon className="w-5 h-5 text-primary" />
                  Team Collaboration
                </li>
                <li class="flex items-center gap-2">
                  <CheckIcon className="w-5 h-5 text-primary" />
                  Real-time Reporting
                </li>
                <li class="flex items-center gap-2">
                  <CheckIcon className="w-5 h-5 text-primary" />
                  Integrations with Popular Apps
                </li>
              </ul>
            </div>
            <!-- <div>
              <h2 class="text-xl font-semibold">Product Details</h2>
              <div class="mt-2 space-y-2 text-muted-foreground">
                <div class="flex items-center gap-2">
                  <CalendarDaysIcon class="w-5 h-5" />
                  <span>Released in January 2023</span>
                </div>
                <div class="flex items-center gap-2">
                  <UsersIcon class="w-5 h-5" />
                  <span>Used by over 10,000 teams</span>
                </div>
                <div class="flex items-center gap-2">
                  <StarIcon class="w-5 h-5" />
                  <span>4.8 out of 5 star rating</span>
                </div>
              </div>
            </div> -->
          </div>
        </div>
        <div class="col-span-2 grid gap-8">
          <div>
            <h2 class="text-2xl font-bold">About the Makers</h2>
            <div class="grid md:grid-cols-2 gap-6 mt-6">
              <div class="flex items-start gap-4">
                <div>
                  <h3 class="font-semibold">John Doe</h3>
                  <p class="text-muted-foreground">Co-founder, CEO</p>
                  <p class="text-sm text-muted-foreground">
                    John has over 15 years of experience in the productivity
                    software industry. He is passionate about building tools
                    that empower teams to achieve more.
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div>
                  <h3 class="font-semibold">Jane Smith</h3>
                  <p class="text-muted-foreground">Co-founder, CTO</p>
                  <p class="text-sm text-muted-foreground">
                    Jane is a seasoned software engineer with a passion for
                    building innovative and user-friendly products. She leads
                    the technical team at Acme.
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-2xl font-bold">Key Accomplishments</h2>
            <div class="grid md:grid-cols-2 gap-6 mt-6">
              <div class="flex items-start gap-4">
                <AwardIcon className="w-12 h-12 text-primary" />
                <div>
                  <h3 class="font-semibold">Productivity App of the Year</h3>
                  <p class="text-sm text-muted-foreground">
                    Acme Productivity Suite was awarded the prestigious
                    "Productivity App of the Year" award by the Software
                    Productivity Association.
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <UsersIcon className="w-12 h-12 text-primary" />
                <div>
                  <h3 class="font-semibold">10,000+ Teams Onboarded</h3>
                  <p class="text-sm text-muted-foreground">
                    Acme Productivity Suite has been adopted by over 10,000
                    teams across various industries, helping them streamline
                    their workflows and boost productivity.
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <StarIcon className="w-12 h-12 text-primary" />
                <div>
                  <h3 class="font-semibold">4.8 out of 5 Star Rating</h3>
                  <p class="text-sm text-muted-foreground">
                    Acme Productivity Suite has consistently maintained a high
                    user satisfaction rating of 4.8 out of 5 stars on popular
                    software review platforms.
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <ImportIcon className="w-12 h-12 text-primary" />
                <div>
                  <h3 class="font-semibold">Seamless Integrations</h3>
                  <p class="text-sm text-muted-foreground">
                    Acme Productivity Suite seamlessly integrates with a wide
                    range of popular productivity and collaboration tools,
                    allowing users to streamline their workflows.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <Button variant={"outline"}>
      <a href="/software" class="flex items-center">
        <Icon name="bx:arrow-back" class="size-4 mr-2" />
        Back To Softwares
      </a>
    </Button>
  </Container>
</Layout>
