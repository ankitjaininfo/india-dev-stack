---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const blogs = await getCollection("blogs");
---

<Layout title="Blogs">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Blogs</Fragment>
      <Fragment slot="desc">
        Blogs are a great way to share your thoughts and ideas with the world.
      </Fragment>
    </Sectionhead>
    <div class="grid grid-cols-3 gap-8 mt-6">
      {
        blogs.map((blog) => (
          <a href={"/blogs/" + blog.slug}>
            <img
              src={blog.data.heroImage}
              alt="Blog Image"
              class="rounded-xl shadow"
            />
            <h2 class="text-lg md:text-xl font-semibold mt-4 px-2">
              {blog.data.title}
            </h2>
            <p class="text-muted-foreground">{blog.data.description}</p>
          </a>
        ))
      }
    </div>
  </Container>
</Layout>
