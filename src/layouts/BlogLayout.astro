---
import Container from "@components/container.astro";
import { getFormattedDate } from "@utils/all";
import Layout from "./Layout.astro";
import { Picture } from "astro:assets";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Container>
    <div class="mx-auto max-w-3xl mt-14">
      <Picture
        width={770}
        height={400}
        src={frontmatter.heroImage}
        alt={frontmatter.title}
        class="rounded-xl mt-6 shadow-md hover:shadow-xl transition-all duration-300 active:scale-[0.99] cursor-pointer"
      />
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="text-muted-forefround">
          {frontmatter.author}
        </span>
        <span class="text-muted-forefround">•</span>
        <time class="text-muted-forefround" datetime={frontmatter.pubDate}>
          {getFormattedDate(frontmatter.pubDate)}
        </time>
        <span class="text-muted-forefround hidden md:block">•</span>
      </div>
    </div>

    <div
      class="mx-auto prose text-foreground/85 prose-headings:text-foreground prose-lg mt-6">
      <slot />
    </div>
    <a href="/blogs/" class="border rounded-md px-4 py-3 mt-8 mx-auto"
      >← Back to Blog</a
    >
  </Container>
</Layout>
